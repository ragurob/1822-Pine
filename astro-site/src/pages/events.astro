---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSiteSettings } from '../lib/sanity';

const siteSettings = await getSiteSettings();

const metaTitle = 'Events & Retreats | The Rittenhouse Residence';
const metaDescription = 'Host your corporate retreat, wedding, or special event at Philadelphia\'s premier historic venue. Accommodates up to 60 guests with overnight stays for 16.';
---

<BaseLayout title={metaTitle} description={metaDescription}>
  <main class="events-page">

    <!-- Hero -->
    <section class="events-hero">
      <div class="hero-content">
        <h1>Events & Corporate Retreats</h1>
        <p class="hero-subtitle">Philadelphia's Most Distinguished Private Event Venue</p>
        <div class="hero-highlights">
          <span>üèõÔ∏è Historic Mansion</span>
          <span>üë• Up to 60 Guests</span>
          <span>üõèÔ∏è Sleeps 16</span>
          <span>üìç Rittenhouse Square</span>
        </div>
        <div class="hero-cta">
          <a href="/contact" class="btn btn-primary btn-large">Request Event Proposal</a>
          <a href="#venue-specs" class="btn btn-secondary btn-large">View Specifications</a>
        </div>
      </div>
    </section>

    <!-- Event Types -->
    <section class="event-types">
      <div class="container">
        <h2>Perfect for Your Special Occasion</h2>
        <p class="section-subtitle">A versatile venue for memorable events</p>

        <div class="types-grid">
          <div class="type-card">
            <div class="type-icon">üè¢</div>
            <h3>Corporate Retreats</h3>
            <p>Executive off-sites, board meetings, team building retreats with overnight accommodations and full-day use of elegant meeting spaces.</p>
