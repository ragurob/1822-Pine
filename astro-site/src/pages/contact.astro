---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getContactPage, getAllFaqs } from '../lib/sanity';

const contactData = await getContactPage();
const faqs = await getAllFaqs();

// Group FAQs by category
const faqsByCategory = faqs.reduce((acc: any, faq: any) => {
  if (!acc[faq.category]) {
    acc[faq.category] = [];
  }
  acc[faq.category].push(faq);
  return acc;
}, {});

const categoryNames: any = {
  booking: 'Booking & Cancellation',
  property: 'Property Details',
  amenities: 'Amenities & Services',
  rules: 'House Rules & Policies',
  location: 'Location & Transportation',
  special: 'Special Requests',
};

const {
  title,
  email,
  phone,
  address,
  responseTime,
  socialLinks,
  seo
} = contactData;

const metaTitle = seo?.metaTitle || `${title} | The Rittenhouse Residence`;
const metaDescription = seo?.metaDescription || `Contact us for booking inquiries, questions, or special requests. ${responseTime}. Email: ${email}`;
---

<BaseLayout title={metaTitle} description={metaDescription}>
  <main class="contact-page">

    <!-- Hero Section -->
    <section class="contact-hero">
      <div class="container">
        <h1>Get in Touch</h1>
        <p class="hero-subtitle">We're here to make your stay unforgettable</p>
        <div class="response-badge">
          <span class="badge-icon">‚ö°</span>
          <span>{responseTime}</span>
        </div>
      </div>
    </section>

    <!-- Contact Grid -->
    <section class="contact-section">
      <div class="container">
        <div class="contact-grid">

          <!-- Contact Form -->
          <div class="contact-form-container">
            <h2>Send Us a Message</h2>
            <p class="form-subtitle">Have questions? We'd love to hear from you.</p>

            <form id="contact-form" class="contact-form">
              <div class="form-group">
                <label for="name">Your Name *</label>
                <input type="text" id="name" name="name" required />
              </div>

              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" required />
              </div>

              <div class="form-group">
                <label for="phone-input">Phone Number</label>
                <input type="tel" id="phone-input" name="phone" />
              </div>

              <div class="form-group">
                <label for="inquiry-type">What can we help with? *</label>
                <select id="inquiry-type" name="inquiry-type" required>
                  <option value="">Select a topic...</option>
                  <option value="booking">Booking Inquiry</option>
                  <option value="availability">Check Availability</option>
                  <option value="pricing">Pricing Questions</option>
                  <option value="property">Property Questions</option>
                  <option value="special">Special Requests</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div class="form-group">
                <label for="dates">Preferred Dates (optional)</label>
                <input type="text" id="dates" name="dates" placeholder="e.g., Dec 20-25, 2024" />
              </div>

              <div class="form-group">
                <label for="message">Your Message *</label>
                <textarea id="message" name="message" rows="6" required></textarea>
              </div>

              <button type="submit" class="btn btn-primary btn-large">
                <span>Send Message</span>
                <span class="btn-icon">‚Üí</span>
              </button>

              <p class="form-note">
                <span class="note-icon">üîí</span>
                Your information is secure and will never be shared
              </p>
            </form>

            <div id="form-success" class="form-message success" style="display: none;">
              <span class="message-icon">‚úì</span>
              <div>
                <h3>Message Sent!</h3>
                <p>We'll get back to you within 4 hours.</p>
              </div>
            </div>

            <div id="form-error" class="form-message error" style="display: none;">
              <span class="message-icon">‚úï</span>
              <div>
                <h3>Oops! Something went wrong.</h3>
                <p>Please try emailing us directly at <a href={`mailto:${email}`}>{email}</a></p>
              </div>
            </div>
          </div>

          <!-- Contact Info Sidebar -->
          <div class="contact-sidebar">
            <div class="contact-card">
              <h3>Direct Contact</h3>

              <div class="contact-method">
                <div class="method-icon">üìß</div>
                <div class="method-info">
                  <div class="method-label">Email</div>
                  <a href={`mailto:${email}`} class="method-value">{email}</a>
                </div>
              </div>

              {phone && (
                <div class="contact-method">
                  <div class="method-icon">üì±</div>
                  <div class="method-info">
                    <div class="method-label">Phone</div>
                    <a href={`tel:${phone}`} class="method-value">{phone}</a>
                  </div>
                </div>
              )}

              <div class="contact-method">
                <div class="method-icon">üìç</div>
                <div class="method-info">
                  <div class="method-label">Address</div>
                  <div class="method-value">
                    {address?.street}<br />
                    {address?.city}, {address?.state} {address?.zip}
                  </div>
                </div>
              </div>
            </div>

            {socialLinks && (
              <div class="contact-card">
                <h3>Follow Us</h3>
                <div class="social-links">
                  {socialLinks.instagram && (
                    <a href={socialLinks.instagram} target="_blank" rel="noopener noreferrer" class="social-link">
                      <span class="social-icon">üì∑</span>
                      <span>Instagram</span>
                    </a>
                  )}
                  {socialLinks.facebook && (
                    <a href={socialLinks.facebook} target="_blank" rel="noopener noreferrer" class="social-link">
                      <span class="social-icon">üë•</span>
                      <span>Facebook</span>
                    </a>
                  )}
                </div>
              </div>
            )}

            <div class="contact-card booking-card">
              <h3>Ready to Book?</h3>
              <p>Skip the wait and book directly on our platforms:</p>
              <div class="booking-buttons">
                <a href="/rates" class="btn btn-secondary">View Rates</a>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- FAQs Section -->
    <section class="faqs-section">
      <div class="container">
        <h2>Frequently Asked Questions</h2>
        <p class="section-subtitle">Find quick answers to common questions</p>

        <div class="faq-categories">
          {Object.entries(faqsByCategory).map(([categoryKey, categoryFaqs]: [string, any]) => (
            <div class="faq-category">
              <h3 class="category-title">{categoryNames[categoryKey] || categoryKey}</h3>
              <div class="faq-accordion">
                {categoryFaqs.map((faq: any, index: number) => (
                  <div class="faq-item">
                    <button class="faq-question" data-faq={`${categoryKey}-${index}`}>
                      <span>{faq.question}</span>
                      <span class="faq-toggle">+</span>
                    </button>
                    <div class="faq-answer" id={`faq-${categoryKey}-${index}`}>
                      {faq.answer.map((block: any) => {
                        if (block._type === 'block') {
                          return <p>{block.children.map((child: any) => child.text).join('')}</p>;
                        }
                      })}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>

        <div class="faq-cta">
          <p>Didn't find what you're looking for?</p>
          <a href="#contact-form" class="btn btn-primary">Ask Us Directly</a>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="contact-final-cta">
      <div class="container">
        <h2>Let's Make Your Stay Memorable</h2>
        <p>We're passionate about providing exceptional hospitality</p>
        <div class="cta-stats">
          <div class="stat">
            <div class="stat-number">4 hrs</div>
            <div class="stat-label">Avg Response Time</div>
          </div>
          <div class="stat">
            <div class="stat-number">500+</div>
            <div class="stat-label">Happy Guests</div>
          </div>
          <div class="stat">
            <div class="stat-number">4.9‚≠ê</div>
            <div class="stat-label">Average Rating</div>
          </div>
        </div>
      </div>
    </section>

  </main>
</BaseLayout>

<script>
  // FAQ Accordion
  const faqButtons = document.querySelectorAll('.faq-question');
  faqButtons.forEach(button => {
    button.addEventListener('click', () => {
      const faqId = button.getAttribute('data-faq');
      const answer = document.getElementById(`faq-${faqId}`);
      const toggle = button.querySelector('.faq-toggle');

      const isOpen = answer?.style.maxHeight;

      // Close all other FAQs
      document.querySelectorAll('.faq-answer').forEach(a => {
        a.style.maxHeight = null;
      });
      document.querySelectorAll('.faq-toggle').forEach(t => {
        t.textContent = '+';
      });

      // Toggle current FAQ
      if (!isOpen && answer && toggle) {
        answer.style.maxHeight = answer.scrollHeight + 'px';
        toggle.textContent = '‚àí';
      }
    });
  });

  // Contact Form Handling
  const contactForm = document.getElementById('contact-form');
  const formSuccess = document.getElementById('form-success');
  const formError = document.getElementById('form-error');

  if (contactForm) {
    contactForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(contactForm as HTMLFormElement);
      const data = Object.fromEntries(formData.entries());

      try {
        // For demo purposes, we'll just show success
        // In production, this would submit to Netlify Forms or an API endpoint
        console.log('Form data:', data);

        // Hide form and show success message
        if (contactForm && formSuccess) {
          (contactForm as HTMLElement).style.display = 'none';
          formSuccess.style.display = 'flex';
        }

        // In production, uncomment this:
        /*
        const response = await fetch('/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: new URLSearchParams(data as any).toString()
        });

        if (response.ok) {
          contactForm.style.display = 'none';
          formSuccess.style.display = 'flex';
        } else {
          throw new Error('Form submission failed');
        }
        */
      } catch (error) {
        console.error('Form error:', error);
        if (contactForm && formError) {
          (contactForm as HTMLElement).style.display = 'none';
          formError.style.display = 'flex';
        }
      }
    });
  }

  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector((this as HTMLAnchorElement).getAttribute('href')!);
      if (target) {
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });
</script>

<style>
